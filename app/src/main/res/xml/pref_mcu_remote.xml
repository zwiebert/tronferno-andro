    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:inputType="numberDecimal"
        android:numeric="integer"
        android:key="serial_baud"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Serial Port Baud Rate" />

    <EditTextPreference
        android:inputType="numberSigned"
        android:key="geo_latitude"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Latitude" />

    <EditTextPreference
        android:inputType="numberSigned"
        android:key="geo_longitude"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Longitude" />

    <EditTextPreference
        android:inputType="numberSigned"
        android:key="geo_time_zone"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Posix Time-Zone (TZ)" />

    <EditTextPreference
        android:key="wlan_ssid"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="WLAN SSID" />


    <EditTextPreference
        android:key="wlan_password"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="WLAN Password" />


    <EditTextPreference
        android:key="cu_id"
        android:text="enter the actual ID (6 digit, hex) or enter auto for auto-scan ID"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Central Unit ID" />


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:entries="@array/pref_mcu_cli_verbosity_list_titles"
        android:entryValues="@array/pref_mcu_cli_verbosity_list_values"
        android:key="cli_verbosity"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="CLI Verbosity Level" />

</PreferenceScreen>
